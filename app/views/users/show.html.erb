<h1><%= @user.username %></h1>
<ul>
<% @user.goals
         .where("pub_priv = ? or user_id = ? ", "Public", current_user
         .try(:id)).each do |goal| %>
 <li> <%= link_to goal.title, goal_url(goal) %></li>
<% end %>
</ul>

<%= render 'comments/source_comments', source: @goal %>

<h2>Add Comment</h2>
<% type = "User" %>
<%= render 'comments/form', type: type, source: @user%>