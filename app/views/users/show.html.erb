<h1><%= @user.username %></h1>
<ul>
<% @user.goals
         .where("pub_priv = ? or user_id = ? ", "Public", current_user
         .try(:id)).each do |goal| %>
 <li> <%= link_to goal.title, goal_url(goal) %></li>
<% end %>
</ul>

<ul>
<% @user.comments.each do |comment| %>
  <li><%= comment.body %><br>
    From: <%= comment.author.username %></li><br>
<% end %>
</ul>

